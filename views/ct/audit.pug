extends ../layout

block content
  h1 Recent Case Activity
  a.btn.btn-link(href='/ct') Back to dashboard
  if entries && entries.length
    table.table.table-dark.table-striped.mt-3
      thead
        tr
          th Case
          th Staff
          th Action
          th When
      tbody
        each entry in entries
          tr
            td= entry.case_id
            td= entry.staff || '—'
            td= entry.log
            td= entry.timestamp ? new Date(entry.timestamp).toLocaleString() : '—'
  else
    p.text-muted No audit entries logged yet.
