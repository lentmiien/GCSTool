extends layout

block content
    if errors
        ul
            for error in errors
                li!= error.msg
        hr
    h1 New Entry
    form(action='/entry/create', method='post')
        div.form-group
            input#creator(type='hidden', name='creator')
            label(for='title') Title
            input#title.form-control(type='text' placeholder='The title' name='title' required='true' value=(undefined===content ? '' : content.title))
            br
            label(for='category') Category
            select#category.form-control(name='category')
                if undefined===content
                    option(value='template', lg_language='_template_')
                    option(value='manual', lg_language='_manual_')
                    option(value='ccontact', lg_language='_ccontact_')
                else
                    if content.category==='template'
                        option(value='template', lg_language='_template_', selected)
                    else
                        option(value='template', lg_language='_template_')
                    if content.category==='manual'
                        option(value='manual', lg_language='_manual_', selected)
                    else
                        option(value='manual', lg_language='_manual_')
                    if content.category==='ccontact'
                        option(value='ccontact', lg_language='_ccontact_', selected)
                    else
                        option(value='ccontact', lg_language='_ccontact_')
            br
            label(for='ismaster') Is Master
            input#ismaster.form-control(type='checkbox', name='ismaster', checked=(undefined===content ? false : (undefined===content.ismaster ? false : true)))
            br
            label(for='tag') Tag
            - const tags = ['_account_related_','_order_item_statuses_','_order_modifying_','_payment_shipping_','_after_service_shipping_','_after_service_defect_','_after_service_preowned_','_returns_refunds_','_claims_cases_','_work_related_','_case_assist_','_customer_dep_','_logistics_dep_','_feedback_','_other_']
            select#tag.form-control(name='tag')
                if undefined===content
                    each tag in tags
                        option(value=tag lg_language=tag)
                else
                    each tag in tags
                        if content.tag===tag
                            option(value=tag, lg_language=tag, selected)
                        else
                            option(value=tag, lg_language=tag)
            br
            label(for='team') Team
            select#team.form-control(name='team')
                if undefined===content
                    option(value='ohami_global_support') GCS Mail team
                    option(value='team2') Team2
                    option(value='team3') Team3
                else
                    if content.team==='ohami_global_support'
                        option(value='ohami_global_support', selected) GCS Mail team
                    else
                        option(value='ohami_global_support') GCS Mail team
                    if content.team==='team2'
                        option(value='team2', selected) Team2
                    else
                        option(value='team2') Team2
                    if content.team==='team3'
                        option(value='team3', selected) Team3
                    else
                        option(value='team3') Team3
        div.form-group
            label(for='content1') Content 1
            textarea#content1.form-control(name='content1', cols='30', rows='10' required='true')= (undefined===content ? '' : content.content1)
            label(for='content2') Content 2
            textarea#content2.form-control(name='content2', cols='30', rows='10')= (undefined===content ? '' : content.content2)
            label(for='content3') Content 3
            textarea#content3.form-control(name='content3', cols='30', rows='10')= (undefined===content ? '' : content.content3)
            label(for='content4') Content 4
            textarea#content4.form-control(name='content4', cols='30', rows='10')= (undefined===content ? '' : content.content4)
            label(for='content5') Content 5
            textarea#content5.form-control(name='content5', cols='30', rows='10')= (undefined===content ? '' : content.content5)
        button.btn.btn-primary(type='submit') Submit