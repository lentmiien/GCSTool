extends layout

block content
  .row
    .col
      h1 Feedback
      table.table.table-dark.table-striped
        thead
          tr
            th(span="col") Date
            th(span="col") Happiness
            th(span="col") Type
            th(span="col") Bug
            th(span="col") Comment
            th(span="col") Ticket
            th(span="col") Reported by
            th(span="col") Issue
        tbody
          each fb in feedbacks
            tr
              td= (new Date(parseInt(fb.date))).toLocaleDateString()
              td= fb.happiness
              td= fb.type
              td= fb.bug
              td= fb.comment
              td
                a(href=`https://ohami.zendesk.com/agent/tickets/${fb.ticket}`, target="_blank")= fb.ticket
              td= fb.reported_by
              td= fb.issue
      pre#graph_data= JSON.stringify(feedbacks, null, 2)
      #graph_area
      pre#issues= JSON.stringify(issues, null, 2)
  script(src="https://d3js.org/d3.v5.min.js")
  script(src="/javascripts/feedback_controller.js")
