                        else
                          option(value='off') Day off
                  td
                    select#kin.form-control(name='kin')
                        if staff.day5 == 'work'
                          option(value='work' selected) Work
                        else
                          option(value='work') Work
                        if staff.day5 == 'telwork'
                          option(value='telwork' selected) Telework
                        else
                          option(value='telwork') Telework
                        if staff.day5 == 'off'
                          option(value='off' selected) Day off
                        else
                          option(value='off') Day off
                  td
                    select#do.form-control(name='do')
                        if staff.day6 == 'work'
                          option(value='work' selected) Work
                        else
                          option(value='work') Work
                        if staff.day6 == 'telwork'
                          option(value='telwork' selected) Telework
                        else
                          option(value='telwork') Telework
                        if staff.day6 == 'off'
                          option(value='off' selected) Day off
                        else
                          option(value='off') Day off
        button.btn.btn-primary(type='submit') Edit
    hr
    h1= `Apply schedule for: ${staff.name}`
    p To come... Form (show schedule, show input for start/end date)
