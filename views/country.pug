extends layout

block content
  .row 
    .col 
      a.btn.btn-link(href="/country/checkjp") Check for JP updates
  h2 Available shipping methods 
  table.table.table-dark.table-striped 
    thead 
      tr 
        th Country 
        th DHL 
        th EMS 
        th Air Parcel 
        th Air SP
        th SAL Parcel 
        th SAL SP
        th Surface Parcel 
        th AIT 
    tbody 
      each country in countries
        tr 
          td= country.country
          td= country.methods.dhl ? "✓" : "-"
          td= country.methods.ems ? "✓" : "-"
          td= country.methods.air_parcel ? "✓" : "-"
          td= `${country.methods.air_small_packet ? "✓" : "-"} / ${country.methods.air_small_packet_reg ? "✓" : "-"}`
          td= country.methods.sal_parcel ? "✓" : "-"
          td= `${country.methods.sal_small_packet ? "✓" : "-"} / ${country.methods.sal_small_packet_reg ? "✓" : "-"}`
          td= country.methods.surface_parcel ? "✓" : "-"
          td= country.methods.ait ? "✓" : "-"
