extends layout

block content
  .row
    .col
      h1 #{i18n('lennart_top')}
      button.btn.btn-danger(onclick="EnableDanger()") #{i18n('enable_danger')}
  .row 
    .col 
      textarea#ait_input(style="width:100%;", rows="10")
    .col 
      button.btn.btn-primary(style="width:100%;", onclick="AIT_CheckUpdates()") Check⇒
      button.btn.btn-warning(style="width:100%;", onclick="AIT_GetSavedData()") ⇐Get saved data
      button.btn.btn-danger(class="danger_action", style="width:100%;", onclick="AIT_SaveToLocalstorage()", disabled) ⇐Save to localstorage
      button.btn.btn-danger(class="danger_action", style="width:100%;", onclick="AIT_ClearLocalstorage()", disabled) *Delete saved data*
    .col 
      div#ait_updates
    .col 
      button.btn.btn-primary(style="width:100%;", onclick="AIT_SaveAndGenerateOutput()") Generate⇒
      button.btn.btn-primary(style="width:100%;", onclick="AIT_GenerateZendeskArticle()") Zendesk⇒
    .col 
      textarea#ait_output(style="width:100%;", rows="10")
  .row 
    .col 
      a.btn.btn-primary(href="/lang/en") English
      a.btn.btn-primary(href="/lang/jp") 日本語
      a.btn.btn-primary(href="/lang/sv") Svenska

  script(src="/javascripts/lennart.js")