extends layout

block content
    a(href='/entry/create', lg_language='_create_')
    hr
    - const tags = ['_account_related_','_order_item_statuses_','_order_modifying_','_payment_shipping_','_after_service_shipping_','_after_service_defect_','_after_service_preowned_','_returns_refunds_','_claims_cases_','_work_related_','_case_assist_','_customer_dep_','_logistics_dep_','_feedback_','_other_'];
    h2 Filter
    span.frame
        span(lg_language='_input_')
        input#s_box(name='search', type='text')
        | 
        input#s_template(name='search', type='checkbox', checked)
        span(lg_language='_templates_')
        | 
        input#s_manual(name='search', type='checkbox', checked)
        span(lg_language='_manual_')
        | 
        input#s_ccontact(name='search', type='checkbox', checked)
        span(lg_language='_ccontact_')
        | 
        select#s_tag(name="search")
            option(value='_', lg_language='_all_')
            each tag in tags
                option(value=tag, lg_language=tag)
        | 
        button(onclick='Filter()') Apply Filter
    hr
    each val in users
        div(class='entry ' + val.category)
            button(class='title_button ' + val.tag, onclick='DisplayEntry(\'entry' + val.id + '\')')= val.title
            i.label= val.category
            i(class='label' + (val.ismaster ? ' master' : ''), style='float:right;')= val.ismaster ? 'Master' : 'Private'
            br
            div(id='entry' + val.id, style='display:none;')
                each content in val.contents
                    if val.category == 'manual'
                        div !{content.data}
                    else
                        textarea(style='width: 100%; height: 135px;', onclick='Selector(this)' readonly)= content.data